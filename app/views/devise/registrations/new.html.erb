<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
<h2 class="form-signin-heading text-center">Please Sign Up</h2>
	<%= f.input :name, required: true, autofocus: true, input_html: {class: "form-control"}, label: false, placeholder: "Name" %>
    <%= f.input :email, required: true, input_html: {class: "form-control"}, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, input_html: {class: "form-control"}, label: false, placeholder: "Password"  %>
    <%= f.input :password_confirmation, required: true, input_html: {class: "form-control confirmation"}, label: false, placeholder: "Password Confirmation"  %>


    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>