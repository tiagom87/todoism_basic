
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

<h2 class="form-signin-heading text-center">Please Sign In</h2>

    <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control"}, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, input_html: {class: "form-control"}, label: false, placeholder: "Password"  %>

    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
