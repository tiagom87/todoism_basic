<%= simple_form_for(@task) do |f| %>
<div class="panel panel-default">
      <div class="panel-body">
        <%= f.input :content, input_html: {class: "form-control"}, label: false, placeholder: "Type your task here" %>
        <%= f.hidden_field :state, value: "to_do" %>
        <%= f.submit "Create", class: "btn btn-info btn-block" %>
      </div>
      
    </div>
<% end %>